<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="CachingPolicies" type="CachingPolicies"/>

  <xs:complexType name="CachingPolicy">
    <xs:sequence>
      <xs:element name="MethodsCachingPolicy" type="xmlMethodCachingPolicies" minOccurs="0"/>
      <xs:element name="Rules" type="cachingRuleDescription" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="xmlMethodCachingPolicies">
    <xs:sequence>
      <xs:element name="entry" type="MethodCachingPolicyEntry" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="MethodCachingPolicyEntry">
    <xs:sequence>
      <xs:element name="methodCachingPolicy" type="MethodCachingPolicy" minOccurs="0"/>
    </xs:sequence>
    <xs:attribute name="methodName" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="MethodCachingPolicy">
    <xs:sequence/>
    <xs:attribute name="action" type="cacheAction" use="required"/>
    <xs:attribute name="cacheName" type="xs:string" use="required"/>
    <xs:attribute name="keyBuilder" type="xs:string"/>
    <xs:attribute name="policyInterceptor" type="xs:string"/>
    <xs:attribute name="resultTransformer" type="xs:string"/>
    <xs:attribute name="valueBuilder" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="cachingRuleDescription">
    <xs:sequence>
      <xs:element name="left" type="RulePart" minOccurs="0"/>
      <xs:element name="right" type="RulePart" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="RulePart">
    <xs:sequence/>
    <xs:attribute name="action" type="cacheAction"/>
    <xs:attribute name="cacheName" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="entry">
    <xs:sequence>
      <xs:element name="ClassCachingPolicy" type="CachingPolicy" minOccurs="0"/>
    </xs:sequence>
    <xs:attribute name="class" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="CachingPolicies">
    <xs:sequence>
      <xs:element name="entries" type="entry" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:simpleType name="cacheAction">
    <xs:restriction base="xs:string">
      <xs:enumeration value="CACHE"/>
      <xs:enumeration value="UPDATE"/>
      <xs:enumeration value="REMOVE"/>
      <xs:enumeration value="CLEAR"/>
      <xs:enumeration value="WITHOUT"/>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>


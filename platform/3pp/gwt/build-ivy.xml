<?xml version="1.0"?>
<!-- build file for dependency-manager part -->
<project name="com.google.gwt.repackaged-build-ivy" 
        default="retrieve-libs" basedir="."
        xmlns:ivy='antlib:fr.jayasoft.ivy.ant'
>

<!-- properties -->

<property file="build.properties" />

<property name="ivy.install.version" value="2.0.0" />

<condition property="ivy.int.home" value="${ivy.home}" else="${user.home}/.ivy2">
  <isset property="ivy.home" />
</condition>

<property name="ivy.jar.dir" value="${ivy.int.home}/jars" />
<property name="ivy.jar.file" value="${ivy.jar.dir}/ivy.jar" />
<property name="maven.repo" value="http://repo1.maven.org/maven2" />
<property name="ivy.groupId" value="org/apache/ivy" />

<condition property="without.ivy.download">
 <or>
   <available file="${ivy.jar.dir}/ivy.jar" />
   <isset property="offline" />
 </or>
</condition>
  
<condition property="without.jsch.download">
 <or>
   <available file="${ivy.jar.dir}/jsch.jar" />
   <isset property="offline" />
 </or>
</condition>

<condition property="without.ivy.build.plugin.download">
 <or>
   <available file="${ivy.jar.dir}/ivy.build.plugin.jar" />
   <isset property="offline" />
 </or>
</condition>

  
<!-- targets -->

 <target name="download-ivy" unless="without.ivy.download">
    <!-- download Ivy from web site so that it can be used even without any special installation -->
   <mkdir dir="${ivy.jar.dir}" />
   <get src="${maven.repo}/${ivy.groupId}/ivy/${ivy.install.version}/ivy-${ivy.install.version}.jar"
        dest="${ivy.jar.file}" usetimestamp="true"/>
 </target>
 
 <target name="download-jsch" unless="without.jsch.download" 
                              depends="download-ivy" >
   <get src="http://prdownloads.sourceforge.net/jsch/jsch-0.1.37.jar?download"
        dest="${ivy.jar.dir}/jsch.jar" usetimestamp="true"/>
 </target>

 <target name="download-ivy.build.plugin" 
         unless="without.ivy.build.plugin.download" 
                              depends="download-ivy" >
   <get src="http://datacenter.gradsoft.ua/public.repository/ua.gradsoft/ivy.build.plugin/jars/ivy.build.plugin-1.0.3.jar"
        dest="${ivy.jar.dir}/ivy.build.plugin.jar" usetimestamp="true"/>
 </target>

 <target name="download-ivy-all" 
    depends="download-ivy,download-jsch,download-ivy.build.plugin" />


 <target name="declare-ivy" depends="download-ivy-all">
   <path id="ivy.lib.path">
      <fileset dir="${ivy.jar.dir}" includes="*.jar"/>
   </path>
   <taskdef resource="fr/jayasoft/ivy/ant/antlib.xml"
            uri="antlib:fr.jayasoft.ivy.ant" 
            classpathref="ivy.lib.path"/>
 </target>

 <target name="resolve-ivy-windows" depends="declare-ivy,check-platform"
         if="isWindows" >
   <ivy:configure file="ivysettings.xml" />
   <ivy:resolve conf="origin-windows" />
 </target>

 <target name="resolve-ivy-linux" 
         depends="declare-ivy,check-platform"
         if="isLinux" >
   <ivy:configure file="ivysettings.xml" />
   <ivy:resolve conf="origin-linux" />
 </target>

 <target name="resolve-ivy" depends="resolve-ivy-linux, resolve-ivy-windows" />

 <target name="retrieve-origin-linux" depends="resolve-ivy,check-platform" if="isLinux">
   <echo message="isLinux: ${isLinux}" />
   <ivy:retrieve  pattern="origin/[artifact]-[revision].[ext]" conf="origin-linux" />
 </target>

 <target name="retrieve-origin-windows" depends="resolve-ivy,check-platform" if="isWindows">
   <echo message="isWindows: ${isWindows}" />
   <ivy:retrieve  pattern="origin/[artifact]-[revision].[ext]" conf="origin-windows" />
 </target>

 <target name="retrieve-origin" depends="retrieve-origin-linux, 
                                         retrieve-origin-windows" >
   <ivy:retrieve  pattern="origin/[artifact]-[revision].[ext]" />
 </target>

 <target name="check-platform-flag">
   <condition property="isLinux">
    <os name="linux" />
   </condition>
   <condition property="isWindows">
    <os family="windows" />
   </condition>
 </target>

 <target name="check-platform-linux" depends="check-platform-flag" 
         if="isLinux" >
  <property name="platform" value="linux" /> 
 </target>

 <target name="check-platform-windows" depends="check-platform-flag" 
         if="isWindows" >
  <property name="platform" value="windows" /> 
 </target>

 <target name="check-platform" 
        depends="check-platform-linux,check-platform-windows" />


</project>

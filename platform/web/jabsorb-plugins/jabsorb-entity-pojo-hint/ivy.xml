<ivy-module version="1.4">
    <info organisation="ua.gradsoft" module="jabsorb.jpa.hint"/>
       
    <configurations>
      <conf name="default" description="standard" />
      <conf name="withjavaee" description="build and retrieve javaee libs" />
      <conf name="src" description="standard build with sources" />
    </configurations>
    <publications>
      <artifact name="jabsorb.jpa.hint" type="jar" />
      <artifact name="jabsorb.jpa.hint-src" type="zip" conf="src" />
    </publications>
    <dependencies>
        <dependency org="org.jabsorb" name="jabsorb" rev="${jabsorb.version}"
                    transitive="false" >
        </dependency>
        <dependency org="org.apache.openejb"
                    name="javaee-api"
                    rev="5.0-1"
                    conf="withjavaee->*"
                    transitive="false"
               >
          <artifact name="javaee-api" type="jar" />
        </dependency>
    </dependencies>
</ivy-module>


     <dependency org="ua.gradsoft" name="jungle.tools.phpjao" 
                 rev="[1.1.0,)" 
                 conf="test->default" transitive="false" >
         <artifact name="PHPJAO" type="php" />
     </dependency>

     <dependency org="org.apache" name="commons-httpclient" 
                 rev="3.1" conf="test->default"  >
         <artifact name="commons-httpclient" type="jar" />
     </dependency>

     <dependency org="org.junit" name="junit" rev="4.4" 
              conf="test->default"/>

     <dependency org="ua.gradsoft" name="jabsorb.bigdecimal.serializer" 
                 rev="[1.1.0,)" conf="test->default" transitive="false" >
         <artifact name="jabsorb.bigdecimal.serializer" type="jar" />
     </dependency>


  </dependencies>

<ivy-module version="1.4">
    <info organisation="com.caucho" module="hessian"/>
       
    <configurations>
      <conf name="default" description="build jar" />
      <conf name="withdep" description="standard build with dependencied" />
    </configurations>
    <publications>
      <artifact name="hessian" type="jar" />
    </publications>
    <dependencies>
        <dependency org="com.caucho" name="hessian-src" rev="${origin.version}"
                    transitive="false" >
         <artifact name="hessian-src" type="jar"
           url="http://hessian.caucho.com/download/hessian-${origin.version}-src.jar"
         />
        </dependency>
        <dependency org="javax.servlet" name="servlet-api" 
                    rev="${servlet-api.version}" >
           <artifact name="servlet-api" type="jar" />
        </dependency>
    </dependencies>
</ivy-module>




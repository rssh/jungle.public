<ivysettings>
        <settings defaultResolver="global.chain" checkUpToDate="false" />

<!-- you can override this property to use mirrors 
	  http://mirrors.dotsrc.org/maven2
	  http://ftp.ggi-project.org/pub/packages/maven2
	  http://mirrors.sunsite.dk/maven2
	  http://public.planetmirror.com/pub/maven2
	  http://ibiblio.lsu.edu/main/pub/packages/maven2
	  http://www.ibiblio.net/pub/packages/maven2
-->
<property name="ibiblio-maven2-root" value="http://repo1.maven.org/maven2/" override="false" />

 <classpath file="${ivy.lib.dir}/ivy.build.plugin-1.0.jar" />
 <typedef name="build" classname="org.apache.ivy.plugins.resolver.build.BuildResolver" />



<namespaces>
   <namespace name="maven2">
        <rule>
       	 <fromsystem>
             <src org="org.apache" module="velocity"/>
             <dest org="org.apache.velocity" module="$m0"/>
         </fromsystem>
         <tosystem>
             <src org="org.apache.velocity" module="velocity" />
             <dest org="org.apache" module="$m0"/>
         </tosystem>
        </rule>
        <rule>	<!-- imported apache maven1 projects -->
       	<fromsystem>
             	<src org="org.apache" module="commons-.+"/>
             	<src org="org.apache" module="log4j"/>
                <dest org="$m0" module="$m0"/>
         </fromsystem>
         <tosystem>
             <src org="commons-.+" module="commons-.+" />
             <src org="log4j" module="log4j" />
             <dest org="org.apache" module="$m0"/>
          </tosystem>
          </rule>
          <rule> <!-- junit -->
             <fromsystem>
	       	<src org="org.junit" module=".+" />
                <dest org="$m0" module="$m0" />
              </fromsystem>
              <tosystem>
    	     	<src org="junit" module="junit" />
                <dest org="org.junit" module="$m0" />
              </tosystem>
           </rule>
           <rule> <!-- hsql -->
             <fromsystem>
	       	<src org="org.hsqldb" module=".+" />
                <dest org="$m0" module="$m0" />
              </fromsystem>
              <tosystem>
    	     	<src org="hsqldb" module="hsqldb" />
                <dest org="org.hsqldb" module="$m0" />
              </tosystem>
           </rule>
    	</namespace>
    	<namespace name="java.net" />
	</namespaces>

        <resolvers>
           <ibiblio name="ibiblio" root="${ibiblio-maven2-root}" 
                    m2compatible="true" namespace="maven2" />
           <ibiblio name="java.net" root="http://download.java.net/maven/1/"
                    namespace="java.net" 
                   pattern="[organization]/jars/[module]-[revision].[ext]" />
           <filesystem name="jungle.repo">
            <ivy pattern="${repo.home}/[organisation]/[module]/ivys/ivy-[revision].xml"/>
               <artifact pattern="${repo.home}/[organisation]/[module]/[type]s/[artifact]-[revision].[ext]"/>
           </filesystem>
           <build name="build.local" 
                  buildResolverDir="${ivy.build.resolver.dir}" >
              <resolver ref="jungle.repo" />
              <dependencyBuild
                  organization="ua.gradsoft" name="jungle.appregistry"
                  buildDirectory="${facilities.home}/appregistry"
                  publishTarget="publish.local"
              />
              <dependencyBuild
                  organization="ua.gradsoft" name="jungle.configuration"
                  buildDirectory="${facilities.home}/configuration"
                  publishTarget="publish.local"
              />
              <dependencyBuild
                  organization="ua.gradsoft" name="jungle.persistence.ejbqlao"
                  buildDirectory="${platform.public.home}/persistence/ejbqlao"
                  publishTarget="publish.local"
              />
              <dependencyBuild
                  organization="ua.gradsoft" name="jungle.persistence.jpaex"
                  buildDirectory="${platform.public.home}/persistence/jpaex"
                  publishTarget="publish.local"
              />
              <dependencyBuild
                  organization="ua.gradsoft" name="jungle.persistence.jdbcex"
                  buildDirectory="${platform.public.home}/persistence/jdbcex"
                  publishTarget="publish.local"
              />
              <dependencyBuild
                  organization="org.jabsorb" name="jabsorb"
                  buildDirectory="${platform.public.home}/web/3pp/jabsorb"
                  publishTarget="publish.local"
              />
              <dependencyBuild
                  organization="ua.gradsoft" name="jabsorb.class.serializer"
                  buildDirectory="${platform.public.home}/web/jabsorb-plugins/class-serializer"
                  publishTarget="publish.local"
              />
              <dependencyBuild
                  organization="ua.gradsoft" 
                  name="jabsorb.bigdecimal.serializer"
                  buildDirectory="${platform.public.home}/web/jabsorb-plugins/bigdecimal-serializer"
                  publishTarget="publish.local"
              />
              <dependencyBuild
                  organization="ua.gradsoft" name="jabsorb.jpa.hint"
                  buildDirectory="${platform.public.home}/web/jabsorb-plugins/jabsorb-entity-pojo-hint"
                  publishTarget="publish.local"
              />
              <dependencyBuild
                  organization="ua.gradsoft" name="spring.jabsorb.initializer"
                  buildDirectory="${platform.public.home}/web/jabsorb-plugins/spring-jabsorb-initializer"
                  publishTarget="publish.local"
              />
              <dependencyBuild
                  organization="ua.gradsoft" name="jungle.gwt.gwtservlet"
                  buildDirectory="${platform.public.home}/web/gwt-plugins/gwt-servlet"
                  publishTarget="publish.local"
              />
              <dependencyBuild
                  organization="com.google.gwt" name="gwt.repackaged"
                  buildDirectory="${platform.public.home}/3pp/gwt"
                  publishTarget="publish.local"
              />
              <dependencyBuild
                  organization="ua.gradsoft" name="jungle.configuration-ui-gwt"
                  buildDirectory="${facilities.home}/configuration-ui-gwt"
                  publishTarget="publish.local"
              />
           </build>
           <chain name="external.chain" returnFirst="true" >
                  <resolver ref="ibiblio" /> 
                  <resolver ref="java.net" /> 
           </chain>
           <chain name="global.chain" returnFirst="true">
                  <resolver ref="jungle.repo" />
                  <resolver ref="build.local" />
                  <resolver ref="external.chain" />
           </chain>
        </resolvers>
        <modules>
          <module organisation="ua.gradsoft" 
                  name="test.spring.hibernate.tomcat.hsql" 
                  resolver="jungle.repo" />
        </modules>
</ivysettings>

